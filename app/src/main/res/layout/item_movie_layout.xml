<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:background="@color/colorPrimary">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/movieIV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/image_back"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="10:7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/info_movie_back"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/movieIV">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/nameTV"
            style="@style/AppLargeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/AppSmallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rating_back"
                android:padding="2dp"
                android:text="Rating"
                android:textColor="@color/black"
                android:textSize="8dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ratingTV"
                style="@style/AppMediumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:padding="2dp"
                android:text=""
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/AppMediumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adult: "
                android:textSize="10dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/adultTV"
                style="@style/AppMediumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:padding="2dp"
                android:text=""
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/AppMediumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Release date: "
                android:textSize="10dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/releaseDate"
                style="@style/AppMediumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:padding="2dp"
                android:text=""
                android:textSize="10dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>