<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppFont">
        <item name="fontFamily">@font/nunito</item>
    </style>

    <style name="AppFontColorPrimary" parent="AppFont">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppFontTextColor" parent="AppFont">
        <item name="android:textColor">@color/glowWhite</item>
    </style>

    <style name="AppFontColorWhite" parent="AppFont">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppSmallText" parent="AppFontTextColor">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppSmallWhiteText" parent="AppFontColorWhite">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppMediumText" parent="AppFontTextColor">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppLargeText" parent="AppFontTextColor">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppExtraLargeText" parent="AppFontTextColor">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="SpinnerText" parent="AppFont" />
</resources>